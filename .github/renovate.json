{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "enabledManagers": ["custom.regex"],
  "forkProcessing": "enabled",
  "recreateWhen": "always",
  "pruneStaleBranches": true,

  "customManagers": [

    /* -------------------------------
       1. VALUES.YAML MANAGER
       -------------------------------- */
    {
      "customType": "regex",
      "managerFilePatterns": [
        "deployments/gpu-operator/values.yaml"
      ],
      "matchStrings": [
        "repository:\\s*(?<repo>[^\\s]+)\\s*\\n\\s*image:\\s*(?<image>[^\\s]+)\\s*\\n\\s*version:\\s*(?<currentValue>[^\\s]+)"
      ],
      "depNameTemplate": "{{repo}}/{{image}}",
      "datasourceTemplate": "docker",
      "extractVersionTemplate": "{{currentValue}}",
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },

    /* -------------------------------
       2. CSV MANAGER (FOLLOWS VALUES.YAML)
       -------------------------------- */
    {
      "customType": "regex",
      "managerFilePatterns": [
        "bundle/manifests/gpu-operator-certified.clusterserviceversion.yaml"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>[^:@]+):(?<currentValue>[^@]+)@(?<currentDigest>sha256:[a-f0-9]{64})"
      ],

      /* depName must MATCH values.yaml depName */
      "depNameTemplate": "{{depName}}",
      "datasourceTemplate": "docker",

      /* Makes CSV accept digest & tag coming from values.yaml */
      "extractVersionTemplate": "{{currentValue}}",
      "extractDigestTemplate": "{{currentDigest}}",

      /* ensures the CSV line updates exactly */
      "versioningTemplate": "{{depName}}:{{newValue}}@{{newDigest}}"
    }
  ],

  /* -------------------------------
     PACKAGE RULES APPLIED TO ALL
     -------------------------------- */
  "packageRules": [
    {
      /* Prevent beta/pre-release versions */
      "allowedVersions": "^\\d+\\.\\d+\\.\\d+$"
    },
    {
      /* GROUPING VALUES + CSV IN ONE PR */
      "matchPaths": [
        "deployments/gpu-operator/values.yaml",
        "bundle/manifests/gpu-operator-certified.clusterserviceversion.yaml"
      ],
      "groupName": "{{depName}}",
      "separateMajorMinor": false,
      "separateMinorPatch": false
    },
    {
      /* Enable digest pinning */
      "matchDatasources": ["docker"],
      "pinDigests": true
    }
  ]
}
