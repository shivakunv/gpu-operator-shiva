{
  "enabledManagers": ["regex"],
  "regexManagers": [
    {
      "fileMatch": ["^deployments/gpu-operator/.*\\.ya?ml$", "^bundle/manifests/.*\\.ya?ml$"],
      "matchStrings": [
        "\\bimage\\s*:\\s*(?<depName>[\\w./:-]+):(?<currentValue>[\\w.-]+)",
        "\\bvalue\\s*:\\s*(?<depName>[\\w./:-]+):(?<currentValue>[\\w.-]+)",
        "\\bversion\\s*:\\s*(?<depName>[\\w./:-]+):(?<currentValue>[\\w.-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "schedule": ["before 4am every day"]
}
