{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],

  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  "forkProcessing": "enabled",
  "ignorePaths": ["vendor/**"],
  "enabledManagers": ["custom.regex"],
  "recreateWhen": "always",
  "pruneStaleBranches": true,

  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "deployments/gpu-operator/values.yaml"
      ],
      "matchStrings": [
        "repository:\\s*(?<repo>\\S+)\\s*[\\s\\S]*?image:\\s*(?<image>\\S+)\\s*[\\s\\S]*?version:\\s*(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "{{repo}}/{{image}}",
      "lookupNameTemplate": "{{repo}}/{{image}}:{{currentValue}}",
      "extractVersionTemplate": "{{currentValue}}",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "bundle/manifests/gpu-operator-certified.clusterserviceversion.yaml"
      ],
      "matchStrings": [
        "(?<depName>nvcr\\.io\\/nvidia\\/[A-Za-z0-9\\-]+):(?<currentValue>[^@\\s]+)@(?<currentDigest>sha256:[a-f0-9]{64})"
      ],
      "depNameTemplate": "{{depName}}",
      "lookupNameTemplate": "{{depName}}:{{currentValue}}",
      "extractVersionTemplate": "{{currentValue}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "{{depName}}:{{newValue}}@{{newDigest}}"
    }
  ],

  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "pinDigests": true,
      "digest": true
     }
  ]
}
