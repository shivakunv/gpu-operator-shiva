{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 30,
  "prConcurrentLimit": 30,
  "dependencyDashboard": false,
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "forkProcessing": "enabled",
  "ignorePaths": ["vendor/**"],
  "enabledManagers": ["custom.regex"],
  "recreateWhen": "always",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "bundle/manifests/gpu-operator-certified.clusterserviceversion.yaml"
      ],
      "matchStrings": [
        "driver-image-550[\\s\\S]*?image:\\s*nvcr\\.io/nvidia/driver@(?<currentValue>sha256:[a-f0-9]{6,})"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "nvcr.io/nvidia/driver-driver-image-550",
      "extractVersionTemplate": "digest"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "bundle/manifests/gpu-operator-certified.clusterserviceversion.yaml"
      ],
      "matchStrings": [
        "driver-image-535[\\s\\S]*?image:\\s*nvcr\\.io/nvidia/driver@(?<currentValue>sha256:[a-f0-9]{6,})"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "nvcr.io/nvidia/driver-driver-image-535",
      "extractVersionTemplate": "digest"
    }    
  ] 
}