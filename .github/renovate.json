{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 10,
  "prConcurrentLimit": 15,
  "dependencyDashboard": false,
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "forkProcessing": "enabled",
  "ignorePaths": ["vendor/**"],
  "enabledManagers": ["custom.regex"],
  "platform": "github",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "bundle/manifests/gpu-operator-certified.clusterserviceversion.yaml"
      ],
      "matchStrings": [
        "image:\\s*\\'?\\\"?(?<depName>[^:]+):(?<currentValue>[^\\s\\'\\\"]+)\\'?\\\"?\\s*"
      ],
      "autoReplaceStringTemplate": "image: {{depName}}:{{newValue}}",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["nvcr.io/nvidia/cuda"],
      "matchDatasources": "docker",
      "matchManagers": "regex",
      "enabled": true
    },
    {
      "matchDepNames": ["nvcr.io/nvidia/driver"],
      "matchDatasources": "docker",
      "matchManagers": "regex",
      "enabled": true
    },
    {
      "matchDepNames": ["nvcr.io/nvidia/k8s-device-plugin"],
      "matchDatasources": "docker",
      "matchManagers": "regex",
      "enabled": true
    },
    {
      "matchDepNames": ["nvcr.io/nvidia/k8s/container-toolkit"],
      "matchDatasources": "docker",
      "matchManagers": "regex",
      "enabled": true
    },
    {
      "matchDepNames": ["nvcr.io/nvidia/k8s/dcgm-exporter"],
      "matchDatasources": "docker",
      "matchManagers": "regex",
      "enabled": true
    }
  ]
}