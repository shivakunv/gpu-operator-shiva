{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": {
    "DIST": "rhel9.4"
  },
  "prHourlyLimit": 30,
  "prConcurrentLimit": 30,
  "dependencyDashboard": false,
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "forkProcessing": "enabled",
  "ignorePaths": ["vendor/**"],
  "enabledManagers": ["custom.regex"],
  "recreateWhen": "always",
  "separateMultipleMajor": false,
  "separateMinorPatch": false,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "bundle/manifests/gpu-operator-certified.clusterserviceversion.yaml"
      ],
      "matchStrings": [
        "(?m)^- name: driver-550\\s*.*?^\\s*image: (?<depName>[^\\s@]+)@(?<currentValue>sha256:[a-f0-9]{64})"
      ],
      "versioningTemplate": "{{depName}}{{#if newValue}}:{{newValue}}{{/if}}{{#if newDigest}}@{{newDigest}}{{/if}}",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "groupName": "bump all nvcr packages",
      "matchPackageNames": ["/.*/"],
      "allowedVersions": "^550.*-{{DIST}}$"
    }
  ]
}