{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 100,
  "prConcurrentLimit": 100,
  "dependencyDashboard": false,
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "forkProcessing": "enabled",
  "ignorePaths": ["vendor/**"],
  "enabledManagers": ["custom.regex"],
  "recreateWhen": "always",
  "separateMultipleMajor": false,
  "separateMinorPatch": false,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "deployments/gpu-operator/values.yaml"
      ],
      "matchStrings": [
        "-\\s*repository:\\s*(?<repo>\\S+)(?:\\n\\s*#.*|\\n\\s*)*\\s*image:\\s*(?<image>\\S+)(?:\\n\\s*#.*|\\n\\s*)*\\s*version:\\s*(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "{{repo}}/{{image}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "nvcr.io/nvidia/cloud-native/dcgm",
        "nvcr.io/nvidia/k8s/dcgm-exporter"
      ],
      "allowedVersions": "^\\d+\\.\\d+\\.\\d+(-[\\w.-]+)?-ubuntu\\d+\\.\\d+$",
      "group": {
        "groupName": "bump all nvcr packages, skip driver",
        "separateMinorPatch": false
      },
      "separateMajorMinor": false
    },
    {
      "matchPackageNames": [
        "nvcr.io/nvidia/cuda"
      ],
      "allowedVersions": "^\\d+\\.\\d+\\.\\d+-base-ubi9$",
      "group": {
        "groupName": "bump all nvcr packages, skip driver",
        "separateMinorPatch": false
      },
      "separateMajorMinor": false
    },
    {
      "matchPackageNames": [
        "nvcr.io/nvidia/cloud-native/k8s-driver-manager",
        "nvcr.io/nvidia/cloud-native/k8s-kata-manager",
        "nvcr.io/nvidia/cloud-native/vgpu-device-manager",
        "nvcr.io/nvidia/cloud-native/vgpu-cc-manager",
        "nvcr.io/nvidia/kubevirt-gpu-device-plugin",
        "nvcr.io/nvidia/k8s-device-plugin"
      ],
      "allowedVersions": "^v\\d+\\.\\d+\\.\\d+$",
      "group": {
        "groupName": "bump all nvcr packages, skip driver",
        "separateMinorPatch": false
      },
      "separateMajorMinor": false
    },
    {
      "matchPackageNames": [
        "nvcr.io/nvidia/k8s/container-toolkit",
        "nvcr.io/nvidia/cloud-native/k8s-mig-manager"
      ],
      "allowedVersions": "^v\\d+\\.\\d+\\.\\d+-ubuntu\\d+\\.\\d+$",
      "group": {
        "groupName": "bump all nvcr packages, skip driver",
        "separateMinorPatch": false
      },
      "separateMajorMinor": false
    },
    {
      "matchPackageNames": [
        "nvcr.io/nvidia/cloud-native/nvidia-fs"
      ],
      "allowedVersions": "^\\d+\\.\\d+\\.\\d+$",
      "group": {
        "groupName": "bump all nvcr packages, skip driver",
        "separateMinorPatch": false
      },
      "separateMajorMinor": false
    },
    {
      "matchPackageNames": [
        "nvcr.io/nvidia/cloud-native/gdrdrv"
      ],
      "allowedVersions": "^v\\d+\\.\\d+(\\.\\d+)?$",
      "group": {
        "groupName": "bump all nvcr packages, skip driver",
        "separateMinorPatch": false
      },
      "separateMajorMinor": false
    },
    {
      "matchPackageNames": ["nvcr.io/nvidia/driver"],
      "enabled": false
    }
  ]
}