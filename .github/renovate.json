{
  "enabledManagers": ["regex"],
  "regexManagers": [
    {
      "fileMatch": ["^deployments/gpu-operator/.*\\.ya?ml$", "^bundle/manifests/.*\\.ya?ml$"],
      "matchStrings": [
        "image:\\s*(?<depName>[\\w./-]+):(?<currentValue>[\\w.-]+)",
        "value:\\s*(?<depName>[\\w./-]+):(?<currentValue>[\\w.-]+)",
        "version:\\s*(?<depName>[\\w./-]+):(?<currentValue>[\\w.-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "schedule": ["before 4am every day"]
}
