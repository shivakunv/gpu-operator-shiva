{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 30,
  "prConcurrentLimit": 30,
  "dependencyDashboard": false,
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "forkProcessing": "enabled",
  "ignorePaths": ["vendor/**"],
  "enabledManagers": ["custom.regex"],
  "recreateWhen": "always",
  "separateMultipleMajor": false,
  "separateMinorPatch": false,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "bundle/manifests/gpu-operator-certified.clusterserviceversion.yaml"
      ],
      "matchStrings": [
        "[-\\s]*image: (?<packageName>nvcr\\.io/nvidia/driver):(?<version>550\\.[^@\\s]+)@(?<currentValue>sha256:[a-f0-9]{64})"
      ],
      "versioningTemplate": "docker",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "groupName": "bump all nvcr packages, skip driver",
      "matchPackageNames": ["nvcr.io/nvidia/driver"],
      "allowedVersions": "^550\\..*"
    }
  ]
}