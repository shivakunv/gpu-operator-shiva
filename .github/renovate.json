{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 10,
  "prConcurrentLimit": 15,
  "dependencyDashboard": false,
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "forkProcessing": "enabled",
  "ignorePaths": ["vendor/**"],
  "enabledManagers": ["custom.regex"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "bundle/manifests/gpu-operator-certified.clusterserviceversion.yaml"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>[\\w./-]+)(?::(?<currentValue>[\\w.-]+))?(?:@sha256:(?<currentDigest>[a-f0-9]{64}))?"
      ],
      "datasourceTemplate": "docker",
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["nvcr.io/nvidia/cuda"],
      "datasource": "docker",
      "enabled": true
    },
    {
      "matchDepNames": ["nvcr.io/nvidia/driver"],
      "datasource": "docker",
      "enabled": true
    },
    {
      "matchDepNames": ["nvcr.io/nvidia/k8s-device-plugin"],
      "datasource": "docker",
      "enabled": true
    },
    {
      "matchDepNames": ["nvcr.io/nvidia/k8s/container-toolkit"],
      "datasource": "docker",
      "enabled": true
    },
    {
      "matchDepNames": ["nvcr.io/nvidia/k8s/dcgm-exporter"],
      "datasource": "docker",
      "enabled": true
    }
  ],
  "schedule": ["after 3am and before 4am"]
}