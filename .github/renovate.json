{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 30,
  "prConcurrentLimit": 30,
  "dependencyDashboard": false,
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard",
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "forkProcessing": "enabled",
  "ignorePaths": ["vendor/**"],
  "enabledManagers": ["custom.regex"],
  "recreateWhen": "always",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "bundle/manifests/gpu-operator-certified.clusterserviceversion.yaml"
      ],
      "matchStrings": [
        "[-\\s]*image: nvcr\\.io/nvidia/driver@(?<currentValue>sha256:[a-f0-9]{64})"
      ],
     "datasourceTemplate": "docker",
      "packageNameTemplate": "nvcr.io/nvidia/driver",
      "versioningTemplate": "docker",
      "extractVersionTemplate": "digest"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["nvcr.io/nvidia/driver"],
      "groupName": "nvidia-driver-digest-updates",
      "separateMinorPatch": true
    }
  ]
}